# http://editorconfig.org
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
indent_size = 2

[*.jsx]
indent_size = 2

[*.scss]
indent_size = 2

[*.html]
indent_size = 2
max_line_length = 2000

[*.md]
trim_trailing_whitespace = false
